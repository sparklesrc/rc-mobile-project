    `description` VARCHAR(200) NOT NULL,
    `create_date` DATETIME NULL DEFAULT NULL,
    `update_date` DATETIME NULL DEFAULT NULL,
    `active` INTEGER NOT NULL DEFAULT 0,
    PRIMARY KEY (`id`)
);

